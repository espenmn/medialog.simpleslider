<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool">
    <action-provider name="portal_actions">

        <action title="Enable simpleslider" action_id="enable_gallery" category="object_buttons"
            url_expr="string:${object_url}/@@enable_gallery" visible="True">
            <permission>medialog.simpleslider: Manage simpleslider settings</permission>
        </action>

        <action title="Disable simpleslider" action_id="disable_gallery" category="object_buttons"
            condition_expr="object/@@simpleslider_util/enabled"
            url_expr="string:${object_url}/@@disable_issuu" visible="True">
            <permission>medialog.simpleslider: Manage simpleslider settings</permission>
        </action>
 
		
		<action title="Simpleslider Settings" action_id="simpleslider_settings" category="object"
            condition_expr="object/@@simpleslider_util/enabled"
            url_expr="string:${object_url}/@@simpleslider_settings" visible="True">
            <permission>medialog.simpleslider: Manage simpleslider settings</permission>
        </action>




    </action-provider>
</object>